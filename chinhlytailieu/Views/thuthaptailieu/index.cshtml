
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layouttop.cshtml";
}


<script src="~/Scripts/thuthaptailieu/appthuthaptailieu.js"></script>
@*<script src="~/Scripts/thuthaptailieu/lapmucnopluu.js"></script>*@


<div class="main-container container-fluid" ng-app="appthuthaptailieu">
    <!-- Page Container -->
    <div class="page-container">
        <!-- Page Sidebar -->
        <div class="page-sidebar" id="sidebar">
            <!-- Page Sidebar Header-->
            <div class="sidebar-header-wrapper">
                <input type="text" class="searchinput" />
                <i class="searchicon fa fa-search"></i>
                <div class="searchhelper">Search Reports, Charts, Emails or Notifications</div>
            </div>
            <!-- /Page Sidebar Header -->
            <!-- Sidebar Menu -->
            <ul class="nav sidebar-menu">
                <li>
                    <a href="#/!">
                        <i class="menu-icon fa fa-dashboard"></i>
                        <span class="menu-text">Phân hệ QL thu thập TL</span>
                    </a>
                </li>
                @foreach (var item in Model)
                {
                    <li>
                        <a href="" class="menu-dropdown">
                            <i class="menu-icon fa fa-mail-forward"></i>
                            <span class="menu-text">@item.Tennhom</span>
                            <i class="menu-expand"></i>
                        </a>

                        @Html.Action("chucnang", "thuthaptailieu", new { id = item.Id })
                    </li>
                }
                
            </ul>
            <!-- /Sidebar Menu -->
        </div>
        <!-- /Page Sidebar -->
        <div ng-view>

        </div>
    </div>
    <!-- /Page Container -->
    <!-- Main Container -->

</div>



<!--Basic Scripts-->
<script src="~/assets/js/jquery.min.js"></script>
<script src="~/assets/js/bootstrap.min.js"></script>
<script src="~/assets/js/slimscroll/jquery.slimscroll.min.js"></script>

<!--Beyond Scripts-->
<script src="~/assets/js/beyond.min.js"></script>

<!--Page Related Scripts-->
<script src="~/assets/js/datatable/jquery.dataTables.min.js"></script>
<script src="~/assets/js/datatable/ZeroClipboard.js"></script>
<script src="~/assets/js/datatable/dataTables.tableTools.min.js"></script>
<script src="~/assets/js/datatable/dataTables.bootstrap.min.js"></script>
<script src="~/assets/js/datatable/datatables-init.js"></script>
<script>
        InitiateSimpleDataTable.init();
        InitiateEditableDataTable.init();
        InitiateExpandableDataTable.init();
        InitiateSearchableDataTable.init();
</script>


<script>
        var activeMenu = {
            init: function () {
                var path = location.href.split('?')[0];
                $('#sidebar ul.sidebar-menu>li>ul>li>a').each(function (key, elem) {
                    var href = $(elem).attr('href').split('?')[0];
                    if (path.indexOf(href)>=0) {
                        $(elem).parents('li:first').addClass('active')
                                .parents('li:first').addClass('open active');
                        // $(elem).parents('li:eq(1)',).addClass('open active');
                    }
                });
            }
        };
        activeMenu.init();
</script>

<!--Bootstrap Date Picker-->
<script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>

<script>
        $('.date-picker').datepicker();
</script>
</body>
