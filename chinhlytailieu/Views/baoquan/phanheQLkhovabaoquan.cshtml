
@{
    Layout = null;
}

<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">{{tieude}}</a>
            </li>
            <li>
                <a href="#">Tables</a>
            </li>
            <li class="active">Data Tables</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Body -->
    <div class="page-body" style="margin-top: 0;">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget">
                    <div class="widget-body">
                        <div class="flip-scroll">
                            <div id="simpledatatable_wrapper">
                                <div class="row" style="">
                                    <div class="col-md-12" style="border-bottom: 1px solid #ddd; margin-bottom: 10px;">
                                        <label style="font-size: 18px;"> Thông tin chung</label>
                                    </div>

                                    <div class="col-md-12" style="min-height: 120px;">
                                        <div class="col-md-3" style="border-right: 1px solid #ddd;">
                                            <label>
                                                <i class="fa fa-bar-chart-o"></i> Tỷ lệ sử dụng kho
                                            </label>
                                            <h1 class="text-center">70%</h1>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="70"
                                                     aria-valuemin="0" aria-valuemax="100" style="width:70%">

                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <label>
                                                <i class="fa fa-bar-chart-o"></i> Số lượng hộp hồ sơ
                                            </label>

                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="height: 200px;">
                                    <div class="col-md-12" style="border-bottom: 1px solid #ddd; margin-bottom: 10px;">
                                        <label>Thông tin Xuất nhập kho</label>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <label>Thống kê số lượng hồ sơ mượn</label>
                                        <div class="databox-left bg-orange no-padding">
                                            <div class="databox-sparkline">
                                                <span data-sparkline="line" data-height="158px" data-width="100%" data-fillcolor="#fc8973" data-linecolor="#fff"
                                                      data-spotcolor="#fafafa" data-minspotcolor="#fafafa" data-maxspotcolor="#ffce55"
                                                      data-highlightspotcolor="#fff" data-highlightlinecolor="#fff"
                                                      data-linewidth="3" data-spotradius="0">
                                                    2,6,7,9,8,5,3,4,4,3,6,7
                                                </span>
                                            </div>
                                        </div>

                                        <div class="row" hidden="hidden">
                                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                                <div class="databox databox-xxlg radius-bordered databox-shadowed databox-halved">
                                                    <div class="databox-left bg-whitesmoke padding-top-10">
                                                        <canvas id="pie" height="230" width="230"></canvas>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="border-left: 1px solid #ddd;">
                                        <label>Chức năng thường dùng</label>
                                        <ul style="list-style: none;">
                                            <li><a href=""><i class="fa fa-cogs pull-left"></i> Tra cứu vị trí tài liệu</a></li>
                                            <li><a href=""><i class="fa fa-cogs pull-left"></i> Xuất hồ sơ cho độc giả</a></li>
                                            <li><a href=""><i class="fa fa-cogs pull-left"></i> Nhận hồ sơ độc giả</a></li>
                                            <li><a href=""><i class="fa fa-cogs pull-left"></i> Xếp hộp lên kệ</a></li>
                                            <li><a href=""><i class="fa fa-cogs pull-left"></i> Quản lý giá kệ</a></li>
                                            <li><a href=""><i class="fa fa-cogs pull-left"></i> In mục lục hồ sơ</a></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /Page Body -->
</div>
