
@{
    Layout = null;
}

<script src="~/Scripts/hethong/qlchucvuController.js"></script>

<div class="page-content" ng-controller="qlchucvuController">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">{{nhomchucnang}}</a>
            </li>
            <li>
                {{chucnang}}
            </li>
            @*<li class="active">{{}}</li>*@
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Body -->
    <div class="page-body" style="margin-top: 0;">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget">
                    <div class="widget-body">
                        <div class="flip-scroll">
                            <div id="simpledatatable_wrapper">
                                <div class="row">
                                    <div class="col-md-12" style="border-bottom: 1px dotted #ddd; margin-bottom: 10px;">
                                        <div class="col-md-9 col-xs-12" style="padding:0">
                                            <label style="font-size: 18px;margin: 0;">
                                                Quản lý chức vụ
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-xs-12">
                                        <div class="">
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" ng-click="modallam('add')">
                                                <i class="glyphicon glyphicon-file"></i>Thêm
                                            </button>
                                            <!-- Modal them -->
                                            <div class="modal fade" id="myModal" role="dialog">
                                                <div class="modal-dialog">

                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <form action="" name="formChucVu">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4 class="modal-title">Thông tin chức vụ</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="collapse in">
                                                                    <div class="form-group">
                                                                        <label for="definpu">Mã chức vụ(*)</label> 
                                                                        <span style="color:red;" ng-show="formChucVu.maCV.$touched && formChucVu.maCV.$invalid">Mã chức vụ không được để trống</span>
                                                                        <input type="text" class="form-control" placeholder="Mã" name="maCV" ng-model="cv.Machucvu" ng-required="true" ng-disabled="checkSua">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="definpu">Tên chức vụ(*)</label>
                                                                        <span style="color:red;" ng-show="formChucVu.tenCV.$touched && formChucVu.tenCV.$invalid">Tên chức vụ không được để trống</span>
                                                                        <input type="text" class="form-control" placeholder="Tên" name="tenCV" ng-model="cv.Tenchucvu" ng-required="true">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-primary" ng-click="save(state)" ng-disabled="formChucVu.$invalid">
                                                                    <i class="fa fa-save"></i>Ghi nhận
                                                                </button>

                                                                <button type="button" class="btn btn-primary" ng-disabled="formChucVu.$invalid">
                                                                    <i class="fa fa-save"></i>Ghi nhận và thêm mới
                                                                </button>

                                                                <button type="button" class="btn btn-warning" data-dismiss="modal">
                                                                    <i class="glyphicon glyphicon-log-in"></i>Thoát
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div><!-- end Modal them -->

                                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal" ng-disabled="showBtnSua" ng-click="modallam('edit')">
                                                <i class="glyphicon glyphicon-file"></i>Sửa
                                            </button>
                                            
                                            <button class="btn btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Xóa</button>
                                        </div>
                                        <div class="" style="overflow: auto; height: 390px; margin-top: 5px;">
                                            <table class="table table-hover table-bordered table-striped table-condensed flip-content">
                                                <thead class="flip-content bordered-palegreen">
                                                    <tr>
                                                        <th style="width:200px;">Mã chức vụ</th>
                                                        <th>Tên tên chức vụ</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr dir-paginate="c in chucvu |itemsPerPage:15" ng-click="clickChucVu(c)">
                                                        <td>{{c.MACHUCVU}}</td>
                                                        <td>{{c.TENCHUCVU}}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-xs-12">
                                         @*<pagination total-items="chucvu.length" ng-model="currentPage" items-per-page="pageSize"></pagination>*@
                                        <dir-pagination-controls max-size="15" direction-links="true" boundary-links="true">

                                        </dir-pagination-controls>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /Page Body -->
</div>
<script src="~/Scripts/dirPagination.js"></script>