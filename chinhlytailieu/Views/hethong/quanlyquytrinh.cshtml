
@{
    Layout = null;
}

<div class="page-content" ng-controller="qlquytrinhController">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">{{nhomchucnang}}</a>
            </li>
            <li>
                <a href="#">{{chucnang}}</a>
            </li>
            
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Body -->
    <div class="page-body" style="margin-top: 0;">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget">
                    <div class="widget-body">
                        <div class="flip-scroll">
                            <form name="formLoaiQuyTrinh">
                                <div id="simpledatatable_wrapper">
                                    <div class="row">
                                        <div class="col-md-12" style="border-bottom: 1px dotted #ddd; margin-bottom: 10px;">
                                            <label style="font-size: 16px;">Quản lý qui trình xét duyệt</label>
                                        </div>
                                        <div class="col-md-4 col-xs-12" style="border-right: 1px solid #eee;">
                                            <div class="" style="margin-bottom: 5px;">
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" ng-click="modal('add')">
                                                    <i class="glyphicon glyphicon-file"></i>Thêm
                                                </button>
                                                <!-- Modal them -->
                                                <div class="modal fade" id="myModal" role="dialog">
                                                    <div class="modal-dialog">

                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                    <h4 class="modal-title">Thông tin quy trình xét duyệt</h4>
                                                                </div>
                                                                <div class="modal-body" style="min-height: 180px;">
                                                                    <div class="collapse in">
                                                                        <div class="form-group col-md-12">
                                                                            <label class="col-md-3">Mã quy trình</label>
                                                                            <div class="col-md-9">
                                                                                <input type="text" class="form-control" name="txtmaloai" placeholder="Mã" ng-model="qt.maloai" ng-required="true" ng-disabled="txtdisable">
                                                                                <span style="color:red;" ng-show="formLoaiQuyTrinh.txtmaloai.$touched && formLoaiQuyTrinh.txtmaloai.$invalid">Mã loại không được để trống</span>
                                                                            </div>
                                                                        </div>

                                                                        <div class="form-group col-md-12">
                                                                            <label class="col-md-3">Tên quy trình</label>
                                                                            <div class="col-md-9">
                                                                                <input type="text" class="form-control" name="txttenloai" placeholder="Tên quy trình" ng-model="qt.tenloai" ng-required="true">
                                                                                <span style="color:red;" ng-show="formLoaiQuyTrinh.txttenloai.$touched && formLoaiQuyTrinh.txttenloai.$invalid">Tên loại không được để trống</span>
                                                                            </div>
                                                                        </div>

                                                                        <div class="form-group col-md-12">
                                                                            <label class="col-md-3">Thu phí</label>
                                                                            <div class="col-md-9">
                                                                                @*<div class="checkbox">
                                                                                    <input type="checkbox" ng-model="qt.thuphi">
                                                                                    <span class="text"></span>
                                                                                </div>*@
                                                                                <div class="checkbox" style="margin: 0;">
                                                                                    <label>
                                                                                        <input type="checkbox" ng-model="qt.thuphi">
                                                                                        <span class="text"></span>
                                                                                    </label>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" ng-click="save(state)" ng-disabled="formLoaiQuyTrinh.$invalid">
                                                                        <i class="fa fa-save"></i>Ghi nhận
                                                                    </button>
                                                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                                                                        <i class="fa fa-save"></i>Ghi nhận và thêm mới
                                                                    </button>
                                                                    <button type="button" class="btn btn-warning" data-dismiss="modal">
                                                                        <i class="glyphicon glyphicon-log-in"></i>Thoát
                                                                    </button>
                                                                </div>
                                                        </div>
                                                    </div>
                                                </div><!-- end Modal them -->

                                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal" ng-disabled="btn_disable" ng-click="modal('edit')">
                                                    <i class="fa fa-pencil-square-o"></i>Sửa
                                                </button>
                                                

                                                <button class="btn btn btn-danger" ng-disabled="btn_disable" ng-click="delete()">
                                                    <span class="glyphicon glyphicon-remove"></span>Xóa
                                                </button>
                                            </div>

                                            <div class="">
                                                <div class="" style="height: 450px; overflow: auto;">
                                                    <table class="table table-hover table-bordered table-striped table-condensed flip-content">
                                                        <thead class="flip-content bordered-palegreen">
                                                            <tr>
                                                                <th>Mã</th>
                                                                <th>Tên quy trình</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr class="clickLQT" style="cursor: pointer;" ng-repeat="qt in listLoaiQuyTrinh" ng-click="click_loaiQT(qt)">
                                                                <td>{{qt.MALOAI}}</td>
                                                                <td>{{qt.TENLOAI}}</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8 col-xs-12">
                                            <div class="" style="margin-bottom: 5px;">
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModaltaoquytrinh">
                                                    <i class="glyphicon glyphicon-file"></i>Tạo quy trình
                                                </button>
                                                <!-- Modal tao quy trinh -->
                                                <div class="modal fade" id="myModaltaoquytrinh" role="dialog">
                                                    <div class="modal-dialog">
                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-header">
