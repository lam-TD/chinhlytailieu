
@{
    Layout = null;
}

<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">{{tieude}}</a>
            </li>
            <li>
                <a href="#">Tables</a>
            </li>
            <li class="active">Data Tables</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
    <!-- Page Body -->
    <div class="page-body" style="margin-top: 0;">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="widget">
                    <div class="widget-body" style="min-height:460px;">
                        <div class="flip-scroll">
                            <form role="form">
                                <div class="form-title col-md-12">
                                    <div class="col-md-6">
                                        Cấu hình đăng nhập
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-primary pull-right">
                                            <i class="fa fa-save"></i>Ghi nhận
                                        </button>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="col-sm-2">Chứng thực LDAP</label>
                                    <div class="col-sm-10">
                                        <div class="checkbox" style="margin:0">
                                            <label>
                                                <input type="checkbox">
                                                <span class="text"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="col-sm-2 control-label no-padding-right">Server LDAP(*)</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Server">
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="" class="col-sm-2 control-label no-padding-right">Tài khoản dịch vụ LADP(*)</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Tài khoản">
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="inputPassword3" class="col-sm-2 control-label no-padding-right">Mật khẩu tài khoản(*)</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" placeholder="Mật khẩu">
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="inputPassword3" class="col-sm-2 control-label no-padding-right">Trường tên đầy đủ</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Trường tên">
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="" class="col-sm-2 control-label no-padding-right">Định dạng tìm kiếm user</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Định dạng">
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="" class="col-sm-2 control-label no-padding-right">Nhóm mặc định</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Nhóm">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /Page Body -->
</div>
